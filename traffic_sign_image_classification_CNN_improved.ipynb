#%% md
# 4. Data Splitting and conversion (Data Preprocessing)
#%%
# Checking data shape
print(data.shape, labels.shape)

# Splitting training and testing dataset
X_train, X_test, y_train, y_test = train_test_split(data, labels, test_size=0.2, random_state=42)
X_train = X_train / 255.0
X_test = X_test / 255.0

# Converting the labels into one hot encoding
y_train = to_categorical(y_train, 43)
y_test = to_categorical(y_test, 43)

# Displaying the shape after the split
print(X_train.shape, X_test.shape, y_train.shape, y_test.shape)

#%%
# Display 20 random sample images
random_samples = random.sample(range(X_train.shape[0]), 20)
plt.figure(figsize=(12, 8))
for i, idx in enumerate(random_samples):
    plt.subplot(4, 5, i+1)
    plt.imshow(X_train[idx])
    plt.title(classes[np.argmax(y_train[idx])], fontsize=8, pad=6)
    plt.axis('off')
plt.tight_layout()
plt.show()

#%%

#%% md
# 5. Creating and Compiling the Model (Model Architecture)
#%%

# Building the model
model = Sequential()

# First Block
model.add(Conv2D(32, (5,5), activation='relu', kernel_initializer='he_normal', input_shape=X_train.shape[1:]))
model.add(BatchNormalization())
model.add(Conv2D(32, (5,5), activation='relu', kernel_initializer='he_normal'))
model.add(BatchNormalization())
model.add(MaxPool2D(pool_size=(2, 2)))
model.add(Dropout(0.25))

#Second Block
model.add(Conv2D(64, (3,3), activation='relu', kernel_initializer='he_normal'))
model.add(BatchNormalization())
model.add(Conv2D(64, (3,3), activation='relu', kernel_initializer='he_normal'))
model.add(BatchNormalization())
model.add(MaxPool2D(pool_size=(2, 2)))
model.add(Dropout(0.25))

#Fully Connected Layers
model.add(Flatten())
model.add(Dense(256, activation='relu', kernel_initializer='he_normal'))
model.add(BatchNormalization())
model.add(Dropout(0.5))
model.add(Dense(43, activation='softmax'))

#Compilation
model.compile(
    loss='categorical_crossentropy',optimizer='adam',metrics=['accuracy']
)

#Summary
model.summary()

#%% md
# 6. Training the Model
#%%
# Training the Model
with tf.device('/GPU:0'):
    epochs = 32
    history = model.fit(X_train, y_train, batch_size=64, epochs=epochs, validation_data=(X_test, y_test))
